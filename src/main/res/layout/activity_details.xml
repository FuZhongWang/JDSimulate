<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.p7xxtm1_g.jdsimulate.view.activity.DetailsActivity">

    <ImageView
        android:id="@+id/details_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:src="@mipmap/ic_launcher1_round"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/details_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="24dp"

        android:text="程序员压力大？扯淡！看我25岁了，依旧荣光换发!"
        />
    <Button
        android:id="@+id/add_Shopping"
        android:layout_width="200dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:focusable="false"
        android:textSize="30dp"
        android:layout_marginLeft="214dp"
        android:background="#f00"
        android:textColor="#fff"
        android:text="加入购物车"
        />
</LinearLayout>
